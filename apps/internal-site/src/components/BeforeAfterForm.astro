  function setPreview(targetId, url) {
    console.log('setPreview called:', { targetId, url, elementId: targetId + 'Preview' });
    var preview = document.getElementById(targetId + 'Preview');
    var placeholder = document.querySelector('[data-placeholder="' + targetId + '"]');
    console.log('Preview element found:', !!preview, 'Placeholder found:', !!placeholder);
    if (!preview) {
      console.warn('Preview element not found for:', targetId);
      return;
    }
    if (url) {
      preview.onload = function() {
        updatePreviewMeta(targetId, preview.naturalWidth, preview.naturalHeight);
      };
      preview.onerror = function() {
        updatePreviewMeta(targetId, null, null);
      };
      preview.src = url;
      preview.classList.add('loaded');
      if (placeholder) placeholder.classList.add('hidden');
      console.log('Image preview set to:', url);
    } else {
      preview.src = '';
      preview.classList.remove('loaded');
      updatePreviewMeta(targetId, null, null);
      if (placeholder) placeholder.classList.remove('hidden');
      console.log('Image preview cleared');
    }
  }

  function updatePreviewMeta(targetId, width, height) {
    var meta = document.querySelector('[data-preview-meta="' + targetId + '"]');
    if (!meta) return;
    if (!width || !height) {
      meta.textContent = '';
      meta.classList.add('hidden');
      return;
    }
    meta.textContent = width + ' Ã— ' + height + ' px';
    meta.classList.remove('hidden');
  }

  function initImageUpload(targetId) {
    var fileInput = document.getElementById(targetId + 'File');
    var urlInputId = targetId === 'before' ? 'beforeImageUrl' : targetId === 'after' ? 'afterImageUrl' : 'singleImageUrl';
    var urlInput = document.getElementById(urlInputId);
    var uploadArea = document.querySelector('[data-upload-target="' + targetId + '"]');
    var progress = document.querySelector('[data-progress="' + targetId + '"]');
    if (!fileInput || !urlInput || !uploadArea) return;

    fileInput.addEventListener('change', async function(e) {
      var file = e.target.files && e.target.files[0];
      if (file) await uploadFile(file);
    });

    uploadArea.addEventListener('click', function() { fileInput.click(); });
    uploadArea.addEventListener('dragover', function(e) { e.preventDefault(); uploadArea.classList.add('dragover'); });
    uploadArea.addEventListener('dragleave', function() { uploadArea.classList.remove('dragover'); });
    uploadArea.addEventListener('drop', async function(e) {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      var file = e.dataTransfer && e.dataTransfer.files[0];
      if (file && file.type.startsWith('image/')) await uploadFile(file);
    });

    urlInput.addEventListener('input', function() {
      setPreview(targetId, urlInput.value);
    });

    async function uploadFile(file) {
      var placeholderInner = document.querySelector('[data-placeholder="' + targetId + '"]');
      try {
        var objectUrl = URL.createObjectURL(file);
        setPreview(targetId, objectUrl);
        if (placeholderInner) placeholderInner.classList.add('hidden');
        if (progress) progress.classList.remove('hidden');

        var formData = new FormData();
        formData.append('file', file);
        formData.append('type', 'before-after');
        var res = await fetch('/api/upload', { method: 'POST', body: formData });
        if (!res.ok) {
          var err = await res.json().catch(function() { return {}; });
          throw new Error(err.message || 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ');
        }
        var result = await res.json();
        var finalUrl = result.url || result.key;
        urlInput.value = finalUrl;
        setPreview(targetId, finalUrl);
        URL.revokeObjectURL(objectUrl);
      } catch (e) {
        console.error('Upload error:', e);
        alert('ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ: ' + (e && e.message ? e.message : 'Unknown error'));
        setPreview(targetId, '');
      } finally {
        if (progress) progress.classList.add('hidden');
      }
    }
  }

  // captionã‹ã‚‰ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³ã€‘ã‚’æŠ½å‡ºã™ã‚‹ãƒ˜ãƒ«ãƒ‘ãƒ¼
  function parseCaptionSections(caption) {
