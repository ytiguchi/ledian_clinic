    const durationMatch = text.match(/ã€(?:æ²»ç™‚æœŸé–“ãƒ»å›æ•°|æœŸé–“ãƒ»å›æ•°|æ²»ç™‚æœŸé–“|æœŸé–“|å›æ•°)ã€‘\s*([\s\S]*?)(?=ã€|$)/);
    if (durationMatch) treatmentDuration = durationMatch[1].trim();
    
    // ã€è²»ç”¨ã€‘ã‚’æŠ½å‡º
    const costMatch = text.match(/ã€è²»ç”¨ã€‘\s*([\s\S]*?)(?=ã€|$)/);
    if (costMatch) treatmentCostText = costMatch[1].trim();
    
    // ã€ãƒªã‚¹ã‚¯ãƒ»å‰¯ä½œç”¨ã€‘ã‚’æŠ½å‡º
    const risksMatch = text.match(/ã€ãƒªã‚¹ã‚¯[ãƒ»ï¼]?å‰¯ä½œç”¨ã€‘\s*([\s\S]*?)(?=ã€|$)/);
    if (risksMatch) risks = risksMatch[1].trim();
    
    // æŠ½å‡ºæ¸ˆã¿ã‚»ã‚¯ã‚·ãƒ§ãƒ³ã‚’é™¤ã„ãŸæ®‹ã‚Šã‚’captionã¨ã—ã¦ä¿æŒ
    let remaining = text
      .replace(/ã€(?:åŒ»ç™‚å†…å®¹|æ²»ç™‚å†…å®¹)ã€‘[\s\S]*?(?=ã€|$)/, '')
      .replace(/ã€(?:æ²»ç™‚æœŸé–“ãƒ»å›æ•°|æœŸé–“ãƒ»å›æ•°|æ²»ç™‚æœŸé–“|æœŸé–“|å›æ•°)ã€‘[\s\S]*?(?=ã€|$)/, '')
      .replace(/ã€è²»ç”¨ã€‘[\s\S]*?(?=ã€|$)/, '')
      .replace(/ã€ãƒªã‚¹ã‚¯[ãƒ»ï¼]?å‰¯ä½œç”¨ã€‘[\s\S]*?(?=ã€|$)/, '')
      .trim();
    
    return { treatmentContent, treatmentDuration, treatmentCostText, risks, remaining };
  }

