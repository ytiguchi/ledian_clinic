<script define:vars={{ mode, beforeAfterId }}>
  let currentImageMode: 'before-after' | 'single' = 'before-after';

  function setMode(mode: 'before-after' | 'single') {
    currentImageMode = mode;
    const tabs = document.querySelectorAll('.mode-tab');
    tabs.forEach(t => t.classList.remove('active'));
    document.querySelector(`.mode-tab[data-mode="${mode}"]`)?.classList.add('active');
    document.querySelectorAll('.image-mode').forEach(m => m.classList.add('hidden'));
    document.getElementById(`mode-${mode}`)?.classList.remove('hidden');
  }

  function initModeSwitch() {
    const tabs = document.querySelectorAll('.mode-tab');
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const m = tab.getAttribute('data-mode') as 'before-after' | 'single';
        setMode(m);
      });
    });
  }

  function initGenderButtons(initial?: string | null) {
    const genderButtons = document.querySelectorAll('.gender-btn');
    const genderInput = document.getElementById('patientGender') as HTMLInputElement | null;
    genderButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        genderButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        if (genderInput) genderInput.value = btn.getAttribute('data-value') || '';
      });
    });
    if (initial && genderInput) {
      genderInput.value = initial;
      const btn = document.querySelector(`.gender-btn[data-value="${initial}"]`) as HTMLElement | null;
      if (btn) btn.classList.add('active');
    }
  }

  function setPreview(targetId: 'before' | 'after' | 'single', url: string) {
    const preview = document.getElementById(`${targetId}Preview`) as HTMLImageElement | null;
    const placeholder = document.querySelector(`[data-placeholder="${targetId}"]`) as HTMLElement | null;
    if (!preview) return;
    if (url) {
      preview.src = url;
      preview.classList.add('loaded');
      placeholder?.classList.add('hidden');
    } else {
      preview.src = '';
      preview.classList.remove('loaded');
      placeholder?.classList.remove('hidden');
    }
  }

  function initImageUpload(targetId: 'before' | 'after' | 'single') {
    const fileInput = document.getElementById(`${targetId}File`) as HTMLInputElement | null;
    const urlInputId =
      targetId === 'before' ? 'beforeImageUrl' : targetId === 'after' ? 'afterImageUrl' : 'singleImageUrl';
    const urlInput = document.getElementById(urlInputId) as HTMLInputElement | null;
    const uploadArea = document.querySelector(`[data-upload-target="${targetId}"]`) as HTMLElement | null;
    const progress = document.querySelector(`[data-progress="${targetId}"]`) as HTMLElement | null;
    if (!fileInput || !urlInput || !uploadArea) return;

    fileInput.addEventListener('change', async (e) => {
      const file = (e.target as HTMLInputElement).files?.[0];
      if (file) await uploadFile(file);
    });

    uploadArea.addEventListener('click', () => fileInput.click());
    uploadArea.addEventListener('dragover', (e) => { e.preventDefault(); uploadArea.classList.add('dragover'); });
    uploadArea.addEventListener('dragleave', () => uploadArea.classList.remove('dragover'));
    uploadArea.addEventListener('drop', async (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      const file = e.dataTransfer?.files[0];
      if (file && file.type.startsWith('image/')) await uploadFile(file);
    });

    urlInput.addEventListener('input', () => {
      setPreview(targetId, urlInput.value);
    });

    async function uploadFile(file: File) {
      const placeholder = document.querySelector(`[data-placeholder="${targetId}"]`) as HTMLElement | null;
      try {
        const objectUrl = URL.createObjectURL(file);
        setPreview(targetId, objectUrl);
        placeholder?.classList.add('hidden');
        progress?.classList.remove('hidden');

        const formData = new FormData();
        formData.append('file', file);
        formData.append('type', 'before-after');
        const res = await fetch('/api/upload', { method: 'POST', body: formData });
        if (!res.ok) {
          const err = await res.json().catch(() => ({}));
          throw new Error(err.message || 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ');
        }
        const result = await res.json();
        const finalUrl = result.url || result.key;
        urlInput.value = finalUrl;
        setPreview(targetId, finalUrl);
        URL.revokeObjectURL(objectUrl);
      } catch (e) {
        console.error('Upload error:', e);
        alert(`ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ: ${e instanceof Error ? e.message : 'Unknown error'}`);
        setPreview(targetId, '');
      } finally {
        progress?.classList.add('hidden');
      }
    }
  }

  async function loadBeforeAfterForEdit() {
    const loading = document.getElementById('loadingMessage');
    const form = document.getElementById('beforeAfterForm');
    try {
      const res = await fetch(`/api/before-afters/${beforeAfterId}`);
      if (!res.ok) throw new Error('ç—‡ä¾‹å†™çœŸãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
      const data = await res.json();
      const ba = data.before_after as {
        id: string;
        treatment_id: string;
        category_id: string;
        subcategory_id: string;
        before_image_url: string;
        after_image_url: string;
        caption: string | null;
        treatment_content: string | null;
        treatment_duration: string | null;
        treatment_cost: number | null;
        treatment_cost_text: string | null;
        risks: string | null;
        patient_age: number | null;
        patient_gender: string | null;
        treatment_count: number | null;
        treatment_period: string | null;
        is_published: number;
      };

      // selector initial set
      const selectorApi = (window as any).getTreatmentSelector_before-after-selector?.();
      if (selectorApi?.setSelection) {
        await selectorApi.setSelection({
          categoryId: ba.category_id,
          subcategoryId: ba.subcategory_id,
          treatmentId: ba.treatment_id
        });
      }

      // image mode
      const hasBefore = !!(ba.before_image_url && ba.before_image_url.trim() !== '');
      if (hasBefore) {
        setMode('before-after');
        (document.getElementById('beforeImageUrl') as HTMLInputElement).value = ba.before_image_url;
        (document.getElementById('afterImageUrl') as HTMLInputElement).value = ba.after_image_url;
        setPreview('before', ba.before_image_url);
        setPreview('after', ba.after_image_url);
      } else {
        setMode('single');
        (document.getElementById('singleImageUrl') as HTMLInputElement).value = ba.after_image_url;
        setPreview('single', ba.after_image_url);
      }

      (document.getElementById('caption') as HTMLTextAreaElement).value = ba.caption || '';
      (document.getElementById('treatmentContent') as HTMLTextAreaElement).value = ba.treatment_content || '';
      (document.getElementById('treatmentDuration') as HTMLTextAreaElement).value = ba.treatment_duration || '';
      (document.getElementById('treatmentCostText') as HTMLTextAreaElement).value = ba.treatment_cost_text || '';
      (document.getElementById('risks') as HTMLTextAreaElement).value = ba.risks || '';
      if (ba.patient_age != null) (document.getElementById('patientAge') as HTMLInputElement).value = String(ba.patient_age);
      if (ba.treatment_count != null) (document.getElementById('treatmentCount') as HTMLInputElement).value = String(ba.treatment_count);
      if (ba.treatment_period) (document.getElementById('treatmentPeriod') as HTMLInputElement).value = ba.treatment_period;
      (document.getElementById('isPublished') as HTMLInputElement).checked = ba.is_published === 1;
      initGenderButtons(ba.patient_gender);

      loading?.classList.add('hidden');
      form?.classList.remove('hidden');
    } catch (e) {
      console.error('Load error:', e);
      if (loading) loading.innerHTML = `<p class="text-red-500">ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ: ${e instanceof Error ? e.message : 'Unknown error'}</p>`;
    }
  }

  async function handleSubmit(e: Event) {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    const treatment = (formData.get('treatment') as string) || '';
    if (!treatment) {
      alert('æ–½è¡“ã‚’é¸æŠã—ã¦ãã ã•ã„');
      return;
    }

    let beforeUrl: string | null = null;
    let afterUrl: string | null = null;
    if (currentImageMode === 'before-after') {
      beforeUrl = (formData.get('beforeImageUrl') as string) || '';
      afterUrl = (formData.get('afterImageUrl') as string) || '';
      if (!beforeUrl || !afterUrl) {
        alert('æ–½è¡“å‰ã¨æ–½è¡“å¾Œã®ä¸¡æ–¹ã®ç”»åƒã‚’ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã—ã¦ãã ã•ã„');
        return;
      }
    } else {
      const singleUrl = (formData.get('singleImageUrl') as string) || '';
      if (!singleUrl) {
        alert('ãƒ¬ã‚¿ãƒƒãƒå¾Œã®ç”»åƒã‚’ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã—ã¦ãã ã•ã„');
        return;
      }
      afterUrl = singleUrl;
    }

    const payload = {
      treatment_id: treatment,
      before_image_url: beforeUrl,
      after_image_url: afterUrl,
      caption: formData.get('caption') || null,
      treatment_content: formData.get('treatmentContent') || null,
      treatment_duration: formData.get('treatmentDuration') || null,
      treatment_cost: null,
      treatment_cost_text: formData.get('treatmentCostText') || null,
      risks: formData.get('risks') || null,
      patient_age: formData.get('patientAge') ? Number(formData.get('patientAge')) : null,
      patient_gender: formData.get('patientGender') || null,
      treatment_count: formData.get('treatmentCount') ? Number(formData.get('treatmentCount')) : null,
      treatment_period: formData.get('treatmentPeriod') || null,
      is_published: formData.get('isPublished') === 'on',
      sort_order: 0
    };

    const isEdit = mode === 'edit';
    const url = isEdit ? `/api/before-afters/${beforeAfterId}` : '/api/before-afters';
    const method = isEdit ? 'PUT' : 'POST';

    try {
      const res = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload),
      });
      const result = await res.json().catch(() => ({}));
      if (res.ok) {
        alert(isEdit ? 'æ›´æ–°ã—ã¾ã—ãŸ' : 'ä¿å­˜ã—ã¾ã—ãŸ');
        window.location.href = '/before-afters';
      } else {
        alert(`${isEdit ? 'æ›´æ–°' : 'ä¿å­˜'}ã«å¤±æ•—ã—ã¾ã—ãŸ: ${result.message || result.error || 'Unknown error'}`);
      }
    } catch (err) {
      console.error('Save error:', err);
      alert(isEdit ? 'æ›´æ–°ã«å¤±æ•—ã—ã¾ã—ãŸ' : 'ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    initModeSwitch();
    initGenderButtons(null);
    initImageUpload('before');
    initImageUpload('after');
    initImageUpload('single');
    document.getElementById('beforeAfterForm')?.addEventListener('submit', handleSubmit);

    if (mode === 'edit') {
      loadBeforeAfterForEdit();
    }
  });
</script>


