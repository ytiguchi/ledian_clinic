    const contentMatch = text.match(/ã€(?:åŒ»ç™‚å†…å®¹|æ²»ç™‚å†…å®¹)ã€‘\s*([\s\S]*?)(?=ã€|$)/);
    if (contentMatch) treatmentContent = contentMatch[1].trim();
    
