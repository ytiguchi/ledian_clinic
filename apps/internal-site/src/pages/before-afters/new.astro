  function showSelectionToast(message: string) {
    // æ—¢å­˜ã®ãƒˆãƒ¼ã‚¹ãƒˆã‚’å‰Šé™¤
    const existingToast = document.querySelector('.selection-toast');
    if (existingToast) existingToast.remove();
    
    const toast = document.createElement('div');
    toast.className = 'selection-toast';
    toast.textContent = message;
    document.body.appendChild(toast);
    
    // ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
    requestAnimationFrame(() => {
      toast.classList.add('show');
    });
    
    // 2ç§’å¾Œã«æ¶ˆãˆã‚‹
    setTimeout(() => {
      toast.classList.remove('show');
      setTimeout(() => toast.remove(), 300);
    }, 2000);
  }

  // ç”»åƒã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰æ©Ÿèƒ½
  function initImageUpload(targetId: string) {
    const fileInput = document.getElementById(`${targetId}File`) as HTMLInputElement;
    // targetIdã«å¿œã˜ãŸURLã‚¤ãƒ³ãƒ—ãƒƒãƒˆã‚’å–å¾—
    let urlInputId: string;
    if (targetId === 'before') urlInputId = 'beforeImageUrl';
    else if (targetId === 'after') urlInputId = 'afterImageUrl';
    else urlInputId = 'singleImageUrl';
    
    const urlInput = document.getElementById(urlInputId) as HTMLInputElement;
    const preview = document.getElementById(`${targetId}Preview`) as HTMLImageElement;
    const uploadArea = document.querySelector(`[data-upload-target="${targetId}"]`) as HTMLElement;
    const progress = document.querySelector(`[data-progress="${targetId}"]`) as HTMLElement;

    if (!fileInput || !urlInput || !preview || !uploadArea) return;

    // ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠæ™‚
    fileInput.addEventListener('change', async (e) => {
      const file = (e.target as HTMLInputElement).files?.[0];
      if (file) {
        await uploadFile(file, targetId, urlInput, preview, progress);
      }
    });

    // ãƒ‰ãƒ©ãƒƒã‚°&ãƒ‰ãƒ­ãƒƒãƒ—
    uploadArea.addEventListener('click', () => fileInput.click());
    
    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', async (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      const file = e.dataTransfer?.files[0];
      if (file && file.type.startsWith('image/')) {
        await uploadFile(file, targetId, urlInput, preview, progress);
      }
    });

    // URLå…¥åŠ›æ™‚
    urlInput.addEventListener('input', () => {
      const url = urlInput.value;
      const placeholder = document.querySelector(`[data-placeholder="${targetId}"]`) as HTMLElement;
      if (url) {
        preview.src = url;
        preview.classList.add('loaded');
        if (placeholder) placeholder.classList.add('hidden');
      } else {
        preview.src = '';
        preview.classList.remove('loaded');
        if (placeholder) placeholder.classList.remove('hidden');
      }
    });

    async function uploadFile(file: File, targetId: string, urlInput: HTMLInputElement, preview: HTMLImageElement, progress: HTMLElement | null) {
      const placeholder = document.querySelector(`[data-placeholder="${targetId}"]`) as HTMLElement;
      
      try {
        // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’ä¸€æ™‚çš„ã«è¡¨ç¤º
        const objectUrl = URL.createObjectURL(file);
        preview.src = objectUrl;
        preview.classList.add('loaded');
        if (placeholder) placeholder.classList.add('hidden');
        if (progress) progress.classList.remove('hidden');

        // ãƒ•ã‚©ãƒ¼ãƒ ãƒ‡ãƒ¼ã‚¿ã‚’ä½œæˆ
        const formData = new FormData();
        formData.append('file', file);
        formData.append('type', 'before-after');

        // ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
        const res = await fetch('/api/upload', {
          method: 'POST',
          body: formData,
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.message || 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ');
        }

        const result = await res.json();
        
        // URLã‚’å…¥åŠ›æ¬„ã«è¨­å®š
        urlInput.value = result.url || result.key;
        preview.src = result.url || result.key;

        // ä¸€æ™‚URLã‚’è§£æ”¾
        URL.revokeObjectURL(objectUrl);
      } catch (error) {
        console.error('Upload error:', error);
        alert(`ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ: ${error instanceof Error ? error.message : 'Unknown error'}`);
        preview.src = '';
        preview.classList.remove('loaded');
        if (placeholder) placeholder.classList.remove('hidden');
      } finally {
        if (progress) progress.classList.add('hidden');
      }
    }
  }

