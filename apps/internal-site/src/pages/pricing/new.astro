<script define:vars={{ taxRate }}>
  function toTaxedPrice(amount) {
    return Math.round(amount * (1 + taxRate));
  }

  var categories = [];
  var subcategories = [];
  var treatments = [];

  function showFormError(message, fields) {
    var formError = document.getElementById('formError');
    if (formError) {
      if (fields && fields.length > 0) {
        var details = fields.map(function(field) { return '- ' + field.message; }).join('\n');
        formError.textContent = message + '\n' + details;
      } else {
        formError.textContent = message;
      }
      formError.classList.remove('hidden');
    }
  }

  function clearFieldErrors() {
    document.querySelectorAll('.field-error').forEach(function(node) {
      node.textContent = '';
      node.classList.add('hidden');
    });
  }

  function showFieldErrors(fields) {
    clearFieldErrors();
    if (!fields || fields.length === 0) return;
    fields.forEach(function(field) {
      var target = document.querySelector('.field-error[data-field="' + field.field + '"]');
      if (target) {
        target.textContent = field.message;
        target.classList.remove('hidden');
      }
    });
  }

  function clearFormError() {
    var formError = document.getElementById('formError');
    if (formError) {
      formError.textContent = '';
      formError.classList.add('hidden');
    }
  }

  function fetchJson(url) {
    return fetch(url).then(function(res) {
      if (!res.ok) {
        throw new Error(res.status + ': ' + res.statusText);
      }
      return res.json();
    });
  }

  function setSelectOptions(select, options, placeholder) {
    if (!select) return;
    placeholder = placeholder || 'é¸æŠã—ã¦ãã ã•ã„';
    var html = '<option value="">' + placeholder + '</option>';
    options.forEach(function(option) {
      html += '<option value="' + option.id + '">' + option.name + '</option>';
    });
    select.innerHTML = html;
  }

  function loadCategories() {
    fetchJson('/api/categories').then(function(data) {
      categories = data.categories || [];
      setSelectOptions(document.getElementById('categorySelect'), categories);
    }).catch(function(error) {
      console.error('ã‚«ãƒ†ã‚´ãƒªèª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', error);
    });
  }

  function loadSubcategories(categoryId) {
    fetchJson('/api/subcategories?category_id=' + categoryId).then(function(data) {
      subcategories = data.subcategories || [];
      setSelectOptions(document.getElementById('subcategorySelect'), subcategories);
    }).catch(function(error) {
      console.error('ã‚µãƒ–ã‚«ãƒ†ã‚´ãƒªèª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', error);
    });
  }

  function loadTreatments(subcategoryId) {
    fetchJson('/api/treatments?subcategory_id=' + subcategoryId).then(function(data) {
      treatments = data.treatments || [];
      setSelectOptions(document.getElementById('treatmentSelect'), treatments);
    }).catch(function(error) {
      console.error('æ–½è¡“èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', error);
    });
  }

  // URLãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã‹ã‚‰æ–½è¡“IDã‚’å–å¾—
  function getUrlParam(name) {
    var params = new URLSearchParams(window.location.search);
    return params.get(name);
  }

  // æ–½è¡“IDã‹ã‚‰æ–½è¡“æƒ…å ±ã‚’å–å¾—ã—ã¦è‡ªå‹•é¸æŠ
  function loadTreatmentAndSelect(treatmentId) {
    fetchJson('/api/treatments/' + treatmentId).then(function(data) {
      var treatment = data.treatment;
      if (!treatment) return;

      // ã‚«ãƒ†ã‚´ãƒªã€ã‚µãƒ–ã‚«ãƒ†ã‚´ãƒªã€æ–½è¡“ã‚’é †ç•ªã«ãƒ­ãƒ¼ãƒ‰
      fetchJson('/api/categories').then(function(catData) {
        categories = catData.categories || [];
        setSelectOptions(document.getElementById('categorySelect'), categories);
        document.getElementById('categorySelect').value = treatment.category_id;

        return fetchJson('/api/subcategories?category_id=' + treatment.category_id);
      }).then(function(subData) {
        subcategories = subData.subcategories || [];
        setSelectOptions(document.getElementById('subcategorySelect'), subcategories);
        document.getElementById('subcategorySelect').value = treatment.subcategory_id;

        return fetchJson('/api/treatments?subcategory_id=' + treatment.subcategory_id);
      }).then(function(treatData) {
        treatments = treatData.treatments || [];
        setSelectOptions(document.getElementById('treatmentSelect'), treatments);
        document.getElementById('treatmentSelect').value = treatmentId;
      }).catch(function(err) {
        console.error('æ–½è¡“è‡ªå‹•é¸æŠã‚¨ãƒ©ãƒ¼:', err);
      });
    }).catch(function(err) {
      console.error('æ–½è¡“å–å¾—ã‚¨ãƒ©ãƒ¼:', err);
      // å¤±æ•—æ™‚ã¯é€šå¸¸ã®ã‚«ãƒ†ã‚´ãƒªãƒ­ãƒ¼ãƒ‰
      loadCategories();
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    // URLãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã§æ–½è¡“ãŒæŒ‡å®šã•ã‚Œã¦ã„ã‚Œã°è‡ªå‹•é¸æŠ
    var treatmentParam = getUrlParam('treatment');
    if (treatmentParam) {
      loadTreatmentAndSelect(treatmentParam);
    } else {
      loadCategories();
    }

    var categorySelect = document.getElementById('categorySelect');
    var subcategorySelect = document.getElementById('subcategorySelect');
    var treatmentSelect = document.getElementById('treatmentSelect');

    if (categorySelect) {
      categorySelect.addEventListener('change', function(e) {
        var categoryId = e.target.value;
        if (categoryId) {
          loadSubcategories(categoryId);
          setSelectOptions(subcategorySelect, []);
          setSelectOptions(treatmentSelect, []);
        }
      });
    }

    if (subcategorySelect) {
      subcategorySelect.addEventListener('change', function(e) {
        var subcategoryId = e.target.value;
        if (subcategoryId) {
          loadTreatments(subcategoryId);
          setSelectOptions(treatmentSelect, []);
        }
      });
    }

    var form = document.getElementById('pricePlanForm');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        clearFormError();
        clearFieldErrors();
        var formData = new FormData(form);
        
        var data = {
          treatment_id: formData.get('treatment'),
          plan_name: formData.get('planName'),
          plan_type: formData.get('planType'),
          sessions: formData.get('sessions') ? Number(formData.get('sessions')) : null,
          price: Number(formData.get('price')),
          price_taxed: Number(formData.get('priceTaxed')),
          cost_rate: formData.get('costRate') ? Number(formData.get('costRate')) : null,
          supply_cost: formData.get('supplyCost') ? Number(formData.get('supplyCost')) : null,
          staff_cost: formData.get('staffCost') ? Number(formData.get('staffCost')) : null,
        };

        fetch('/api/pricing', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        }).then(function(res) {
          if (res.ok) {
            alert('ä¿å­˜ã—ã¾ã—ãŸ');
            window.location.href = '/pricing';
          } else {
            return res.json().then(function(error) {
              showFormError('ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ: ' + (error.message || 'Unknown error'), error.fields);
              showFieldErrors(error.fields);
            });
          }
        }).catch(function(error) {
          console.error('ä¿å­˜ã‚¨ãƒ©ãƒ¼:', error);
          showFormError('ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ');
        });
      });

      // ç¨æŠœä¾¡æ ¼ã‹ã‚‰ç¨è¾¼ä¾¡æ ¼ã‚’è‡ªå‹•è¨ˆç®—
      var priceInput = form.querySelector('input[name="price"]');
      var priceTaxedInput = form.querySelector('input[name="priceTaxed"]');
      
      if (priceInput) {
        priceInput.addEventListener('input', function(e) {
          var price = Number(e.target.value);
          if (priceTaxedInput && price > 0) {
            priceTaxedInput.value = toTaxedPrice(price).toString();
          }
        });
      }
    }
  });
</script>
