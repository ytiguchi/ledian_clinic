  }

  .treatment-group:hover {
    border-color: #c7d2fe;
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.08);
  }

  .treatment-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    border-bottom: 1px solid #f1f5f9;
    gap: 1rem;
  }

  .treatment-name {
    font-size: 1.0625rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .treatment-desc {
    font-size: 0.8125rem;
    color: #64748b;
    margin: 0.375rem 0 0 0;
    line-height: 1.5;
  }

  .plan-count {
    font-size: 0.75rem;
    font-weight: 600;
