  function setupTabs() {
    const tabNav = document.getElementById('tabNav');
    const panels = document.querySelectorAll('.tab-panel');

    tabNav.addEventListener('click', (e) => {
      const btn = e.target.closest('.tab-btn');
      if (!btn) return;

      const tabId = btn.dataset.tab;

      // Update buttons
      tabNav.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Update panels
      panels.forEach(panel => {
        panel.classList.toggle('active', panel.id === `${tabId}Panel`);
      });
    });
  }

  // Price Edit Modal Functions
  var TAX_RATE = 0.1;

  window.openPriceEditModal = function(planId, treatmentName, planName, price, priceTaxed) {
    var modal = document.getElementById('priceEditModal');
    if (!modal) return;

    document.getElementById('editPlanId').value = planId;
    document.getElementById('displayTreatmentName').textContent = treatmentName;
    document.getElementById('displayPlanName').textContent = planName;
    document.getElementById('editPrice').value = price || '';
    document.getElementById('editPriceTaxed').value = priceTaxed || '';

