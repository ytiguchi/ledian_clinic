  };

  window.closePriceEditModal = function() {
    var modal = document.getElementById('priceEditModal');
    if (modal) modal.classList.add('hidden');
  };

  // ç¨æŠœã‹ã‚‰ç¨è¾¼ã‚’è‡ªå‹•è¨ˆç®—
  document.addEventListener('DOMContentLoaded', function() {
    var priceInput = document.getElementById('editPrice');
    var priceTaxedInput = document.getElementById('editPriceTaxed');

    if (priceInput && priceTaxedInput) {
      priceInput.addEventListener('input', function() {
        var price = Number(priceInput.value);
        if (price > 0) {
          priceTaxedInput.value = Math.round(price * (1 + TAX_RATE));
        }
      });
    }

    // ãƒ•ã‚©ãƒ¼ãƒ é€ä¿¡
    var form = document.getElementById('priceEditForm');
    if (form) {
      form.addEventListener('submit', function(e) {
