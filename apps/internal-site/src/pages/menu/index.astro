  };

  function getCategoryIcon(name) {
    for (const [key, icon] of Object.entries(categoryIcons)) {
      if (name.includes(key) || key.includes(name)) return icon;
    }
    return 'âœ¨';
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  let allCategories = [];
  let allSubcategories = [];
  let allTreatments = [];
  let allPlans = [];

  async function init() {
    try {
      const [catRes, subRes, treatRes, planRes] = await Promise.all([
        fetch('/api/categories'),
        fetch('/api/subcategories'),
        fetch('/api/treatments'),
        fetch('/api/pricing')
      ]);

      if (!catRes.ok || !subRes.ok || !treatRes.ok) {
        throw new Error('Failed to load data');
      }

      const [catData, subData, treatData, planData] = await Promise.all([
        catRes.json(),
        subRes.json(),
        treatRes.json(),
        planRes.ok ? planRes.json() : { plans: [] }
      ]);

      allCategories = catData.categories || [];
      allSubcategories = subData.subcategories || [];
      allTreatments = treatData.treatments || [];
      allPlans = planData.plans || [];

      renderCategories();
      setupSearch();
    } catch (error) {
      console.error('Error loading data:', error);
      document.getElementById('categoriesContainer').innerHTML = `
        <div class="empty-state">
          <div class="empty-icon">âŒ</div>
          <p>ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ</p>
        </div>
      `;
    }
  }

  function renderCategories(filter = '') {
    const container = document.getElementById('categoriesContainer');
    const filterLower = filter.toLowerCase();

    // Filter categories and subcategories based on search
    const filteredData = allCategories
      .filter(cat => cat.is_active !== false)
      .map(cat => {
        const catSubs = allSubcategories.filter(sub => 
          sub.category_id === cat.id && sub.is_active !== false
        );
        
        const matchedSubs = catSubs.filter(sub => {
          if (!filter) return true;
          
          // Check subcategory name
          if (sub.name.toLowerCase().includes(filterLower)) return true;
          
          // Check treatments in this subcategory
          const subTreatments = allTreatments.filter(t => t.subcategory_id === sub.id);
          return subTreatments.some(t => t.name.toLowerCase().includes(filterLower));
        });

        // Check if category matches
        const catMatches = cat.name.toLowerCase().includes(filterLower);
        
        return {
          category: cat,
          subcategories: catMatches ? catSubs : matchedSubs,
          hasMatch: catMatches || matchedSubs.length > 0
        };
      })
      .filter(item => item.hasMatch);

    if (filteredData.length === 0) {
      container.innerHTML = `
        <div class="empty-state">
          <div class="empty-icon">ğŸ”</div>
          <p>ã€Œ${escapeHtml(filter)}ã€ã«ä¸€è‡´ã™ã‚‹æ–½è¡“ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“</p>
        </div>
      `;
      return;
    }

    container.innerHTML = filteredData.map(({ category, subcategories }) => {
      const subcatCards = subcategories.map(sub => {
        const treatments = allTreatments.filter(t => t.subcategory_id === sub.id);
        const planCount = allPlans.filter(p => 
          treatments.some(t => t.id === p.treatment_id)
        ).length;
        
        const displayTreatments = treatments.slice(0, 3);
        const moreCount = treatments.length - 3;

        return `
          <a href="/menu/${sub.id}" class="subcategory-card">
            <h3 class="subcategory-name">${escapeHtml(sub.name)}</h3>
            <div class="subcategory-meta">
              <span class="subcategory-meta-item">
                <span>ğŸ“‹</span>
                ${treatments.length} æ–½è¡“
              </span>
              <span class="subcategory-meta-item">
                <span>ğŸ’°</span>
                ${planCount} ãƒ—ãƒ©ãƒ³
              </span>
            </div>
            <div class="treatment-tags">
              ${displayTreatments.map(t => `
                <span class="treatment-tag">${escapeHtml(t.name)}</span>
              `).join('')}
              ${moreCount > 0 ? `<span class="treatment-tag more">+${moreCount}</span>` : ''}
            </div>
          </a>
        `;
      }).join('');

      return `
        <div class="category-section" data-category-id="${category.id}">
          <div class="category-header">
            <span class="category-icon">${getCategoryIcon(category.name)}</span>
            <div class="category-info">
              <h2 class="category-name">${escapeHtml(category.name)}</h2>
              <p class="category-count">${subcategories.length} ã‚µãƒ–ã‚«ãƒ†ã‚´ãƒª</p>
            </div>
            <span class="category-toggle">â–¼</span>
          </div>
          <div class="subcategory-grid">
            ${subcatCards || '<div class="empty-state">ã‚µãƒ–ã‚«ãƒ†ã‚´ãƒªãªã—</div>'}
          </div>
        </div>
      `;
    }).join('');

    // Add toggle functionality
    container.querySelectorAll('.category-header').forEach(header => {
      header.addEventListener('click', () => {
        const section = header.closest('.category-section');
        section.classList.toggle('collapsed');
      });
    });
  }

  function setupSearch() {
    const input = document.getElementById('searchInput');
    let timeout = null;

    input.addEventListener('input', () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        renderCategories(input.value.trim());
      }, 300);
    });
  }

  document.addEventListener('DOMContentLoaded', init);
</script>

