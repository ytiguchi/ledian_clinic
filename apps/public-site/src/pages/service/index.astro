---
import PublicLayout from '../../layouts/PublicLayout.astro';
import CtaSection from '../../components/CtaSection.astro';
import '../../styles/page-common.css';
import '../../styles/service.css';

// D1からデータ取得
const db = Astro.locals.runtime.env.DB;

// 型定義
type ServiceContent = {
  id: string;
  name_ja: string;
  slug: string;
  category_id: string;
  category_name: string;
};

type GroupedCategory = {
  id: string;
  name: string;
  services: ServiceContent[];
};

let serviceContents: ServiceContent[] = [];

try {
  // service_contents をカテゴリ情報と一緒に取得
  const result = await db.prepare(`
    SELECT 
      sc.id,
      sc.name_ja,
      sc.slug,
      c.id as category_id,
      c.name as category_name
    FROM service_contents sc
    JOIN subcategories sub ON sc.subcategory_id = sub.id
    JOIN categories c ON sub.category_id = c.id
    WHERE sc.is_published = 1
    ORDER BY c.sort_order, sub.sort_order, sc.name_ja
  `).all();
  serviceContents = result.results as ServiceContent[];
} catch (e) {
  console.error('Failed to fetch data:', e);
}

// カテゴリごとにグループ化
const categoryMap = new Map<string, GroupedCategory>();
for (const service of serviceContents) {
  if (!categoryMap.has(service.category_id)) {
    categoryMap.set(service.category_id, {
      id: service.category_id,
      name: service.category_name,
      services: []
    });
  }
  categoryMap.get(service.category_id)!.services.push(service);
}
const groupedByCategory = Array.from(categoryMap.values());
---

<PublicLayout 
  title="サービス一覧" 
  description="Ledian Clinicのサービス一覧です。ニキビ・ニキビ痕治療、リフトアップ、ピーリング、シミ治療など、豊富なメニューをご用意しています。"
>
  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <div class="container">
      <ol class="breadcrumb-list">
        <li><a href="/">ホーム</a></li>
        <li aria-current="page">サービス一覧</li>
      </ol>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">サービス一覧</h1>
      <p class="page-title-en">SERVICE</p>
    </div>
  </section>

  <!-- Service Section with Category Navigation -->
  <section class="service-section">
    <div class="container">
      <!-- 本番サイト準拠：カテゴリナビとサービス一覧を1つのボーダーボックスに -->
      <div class="service-content-wrapper">
        <!-- Category Navigation -->
        <nav class="category-nav">
          <ul class="category-nav-list">
            {groupedByCategory.map((cat) => (
              <li>
                <a href={`#category-${cat.id}`} class="category-nav-item">
                  <span class="category-nav-text">{cat.name}</span>
                  <img src="/images/icons/service-arrow-down.svg" alt="" class="category-nav-arrow" />
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Service Groups by Category (outside the nav wrapper) -->
      {groupedByCategory.map((cat) => (
        <div class="category-group" id={`category-${cat.id}`}>
          <h4 class="category-title">{cat.name}</h4>
          <ul class="service-grid">
            {cat.services.map((service) => (
              <li class="service-grid-item">
                <a href={`/service/${service.slug}/`} class="service-link">
                  <span class="service-name">{service.name_ja}</span>
                  <img src="/images/icons/service-arrow-pink.svg" alt="" class="service-arrow-img" />
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      {groupedByCategory.length === 0 && (
        <div class="no-data">
          <p>サービス情報を読み込み中...</p>
        </div>
      )}
    </div>
  </section>

  <CtaSection variant="service" lead="＼ まずは無料カウンセリング ／" />
</PublicLayout>


