<script>
  // シンプルなスライダー機能
  document.addEventListener('DOMContentLoaded', () => {
    const slidersPC = document.querySelectorAll('.hidden-sp .hero-slide');
    const slidersSP = document.querySelectorAll('.hidden-pc .hero-slide');
    let currentSlide = 0;
    
    function nextSlide() {
      // PC slides
      slidersPC.forEach(slide => slide.classList.remove('active'));
      slidersSP.forEach(slide => slide.classList.remove('active'));
      
      currentSlide = (currentSlide + 1) % slidersPC.length;
      
      if (slidersPC[currentSlide]) slidersPC[currentSlide].classList.add('active');
      if (slidersSP[currentSlide]) slidersSP[currentSlide].classList.add('active');
    }
    
    // Auto-play every 5 seconds
    setInterval(nextSlide, 5000);
  });
</script>
