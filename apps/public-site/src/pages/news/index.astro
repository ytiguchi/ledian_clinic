---
import PublicLayout from '../../layouts/PublicLayout.astro';
import CtaSection from '../../components/CtaSection.astro';
import '../../styles/page-common.css';

// D1ã‹ã‚‰ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³/ãƒ‹ãƒ¥ãƒ¼ã‚¹ã‚’å–å¾—
const db = Astro.locals.runtime.env.DB;

type Campaign = {
  id: string;
  title: string;
  slug: string;
  description: string | null;
  image_url: string | null;
  start_date: string | null;
  campaign_type: string | null;
};

// ç”»åƒãƒãƒƒãƒ”ãƒ³ã‚°ï¼ˆslugã‹ã‚‰ãƒ­ãƒ¼ã‚«ãƒ«ç”»åƒãƒ‘ã‚¹ã¸ï¼‰
const imageMap: Record<string, string> = {
  'eve-v-muse': '/images/news/eve-v-muse.jpg',
  'friend': '/images/news/friend.png',
  'holidaycampaign': '/images/news/holidaycampaign.png',
  'artmake': '/images/news/artmake.jpg',
  'tribyu': '/images/news/tribyu.jpg',
  'lhala-doctor': '/images/news/lhala-doctor.jpg',
  'ito': '/images/news/ito.jpg',
  'shibouyoukai': '/images/news/shibouyoukai.png',
  'hyaluronicacid': '/images/news/hyaluronicacid.jpg',
  'cancel': '/images/news/cancel.jpg',
  'picotoning': '/images/news/picotoning.jpg',
  'botox': '/images/news/botox.jpg',
  'ellisyssense': '/images/news/ellisyssense.jpg',
  'medicaldiet': '/images/news/medicaldiet.png',
  'rybelsus': '/images/news/rybelsus.jpg',
};

let campaigns: Campaign[] = [];
try {
  const result = await db.prepare(`
    SELECT id, title, slug, description, image_url, start_date, campaign_type
    FROM campaigns
    WHERE is_published = 1
    ORDER BY start_date DESC, created_at DESC
  `).all();
  campaigns = result.results as Campaign[];
} catch (e) {
  console.error('Failed to fetch campaigns:', e);
}

// æ—¥ä»˜ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
function formatDate(dateStr: string | null): string {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  const y = date.getFullYear();
  const m = date.getMonth() + 1;
  const d = date.getDate();
  return `${y}å¹´${m}æœˆ${d}æ—¥`;
}

// ç”»åƒURLã‚’å–å¾—
function getImageUrl(campaign: Campaign): string | null {
  // 1. DBã®image_urlã‚’å„ªå…ˆ
  if (campaign.image_url?.startsWith('/')) {
    return campaign.image_url;
  }
  // 2. imageMapã‹ã‚‰å–å¾—ï¼ˆãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼‰
  if (imageMap[campaign.slug]) {
    return imageMap[campaign.slug];
  }
  return null;
}

// ã‚¿ã‚¤ãƒ—ãƒ©ãƒ™ãƒ«
function getTypeLabel(type: string | null): { label: string; class: string } {
  switch (type) {
    case 'campaign':
      return { label: 'ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³', class: 'type-campaign' };
    case 'new_service':
      return { label: 'æ–°ã‚µãƒ¼ãƒ“ã‚¹', class: 'type-new-service' };
    case 'news':
      return { label: 'ãŠçŸ¥ã‚‰ã›', class: 'type-news' };
    default:
      return { label: '', class: '' };
  }
}
---

<PublicLayout 
  title="ãŠã™ã™ã‚æƒ…å ±ä¸€è¦§" 
  description="Ledian Clinicã‹ã‚‰ã®ãŠçŸ¥ã‚‰ã›ã€ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³æƒ…å ±ã€æ–°ã‚µãƒ¼ãƒ“ã‚¹ã®ã”æ¡ˆå†…ã‚’ãŠå±Šã‘ã—ã¾ã™ã€‚"
>
  <!-- Page Header - æœ¬ç•ªã‚µã‚¤ãƒˆæº–æ‹  -->
  <section class="page-header">
    <div class="container">
      <h2 class="page-title-en">RECOMMENDATION</h2>
      <p class="page-title-ja">ãŠã™ã™ã‚æƒ…å ±ä¸€è¦§</p>
    </div>
  </section>

  <!-- Filter Tabs -->
  <section class="filter-section">
    <div class="container">
      <div class="filter-tabs">
        <button class="filter-tab active" data-filter="all">ã™ã¹ã¦</button>
        <button class="filter-tab" data-filter="campaign">ğŸ ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³</button>
        <button class="filter-tab" data-filter="new_service">âœ¨ æ–°ã‚µãƒ¼ãƒ“ã‚¹</button>
        <button class="filter-tab" data-filter="news">ğŸ“¢ ãŠçŸ¥ã‚‰ã›</button>
      </div>
    </div>
  </section>

  <!-- News List - æœ¬ç•ªã‚µã‚¤ãƒˆæº–æ‹  -->
  <section class="news-section">
    <div class="container">
      {campaigns.length > 0 ? (
        <ul class="news-grid">
          {campaigns.map((item) => {
            const imageUrl = getImageUrl(item);
            const typeInfo = getTypeLabel(item.campaign_type);
            return (
              <li class="news-card" data-type={item.campaign_type || 'all'}>
                <a href={`/news/${item.slug}/`} class="news-card-link">
                  <div class="news-card-image">
                    {imageUrl ? (
                      <img src={imageUrl} alt={item.title} loading="lazy" />
                    ) : (
                      <div class="news-card-placeholder">
                        <span>No Image</span>
                      </div>
                    )}
                    {typeInfo.label && (
                      <span class={`news-type-badge ${typeInfo.class}`}>{typeInfo.label}</span>
                    )}
                  </div>
                  <div class="news-card-content">
                    <p class="news-card-date">{formatDate(item.start_date)}</p>
                    <h3 class="news-card-title">{item.title}</h3>
                  </div>
                </a>
              </li>
            );
          })}
        </ul>
      ) : (
        <div class="no-data">
          <p>ç¾åœ¨ã€ãŠçŸ¥ã‚‰ã›ã¯ã‚ã‚Šã¾ã›ã‚“ã€‚</p>
        </div>
      )}
    </div>
  </section>

  <CtaSection />
</PublicLayout>

<script>
  // ã‚¿ãƒ–ãƒ•ã‚£ãƒ«ã‚¿æ©Ÿèƒ½
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.filter-tab');
    const cards = document.querySelectorAll('.news-card');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ã‚¿ãƒ–åˆ‡ã‚Šæ›¿ãˆ
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        const filter = tab.getAttribute('data-filter');
        
        // ã‚«ãƒ¼ãƒ‰ã®ãƒ•ã‚£ãƒ«ã‚¿ãƒªãƒ³ã‚°
        cards.forEach(card => {
          const cardType = card.getAttribute('data-type');
          if (filter === 'all' || cardType === filter) {
            (card as HTMLElement).style.display = '';
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  /* ===== æœ¬ç•ªã‚µã‚¤ãƒˆæº–æ‹ ãƒ‡ã‚¶ã‚¤ãƒ³ ===== */
  
  /* Page Header */
  .page-header {
    text-align: center;
    padding: 60px 20px 40px;
    background: #FFFCFA;
  }
  
  .page-title-en {
    font-family: 'Cormorant Garamond', serif;
    font-size: 32px;
    font-weight: 400;
    letter-spacing: 0.3em;
    color: #C4A882;
    margin: 0 0 10px;
  }
  
  .page-title-ja {
    font-family: 'Noto Sans JP', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #333;
    margin: 0;
    letter-spacing: 0.1em;
  }
  
  /* Filter Tabs */
  .filter-section {
    padding: 0 20px 30px;
    background: #FFFCFA;
  }
  
  .filter-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .filter-tab {
    padding: 12px 24px;
    font-family: 'Noto Sans JP', sans-serif;
    font-size: 14px;
    color: #333;
    background: #F5F2EC;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .filter-tab:hover {
    background: #EBE6DC;
  }
  
  .filter-tab.active {
    background: #C4A882;
    color: #fff;
  }
  
  /* News Section */
  .news-section {
    padding: 40px 20px 80px;
    background: #FFFCFA;
  }
  
  .news-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .news-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 24px;
    }
  }
  
  .news-card {
    list-style: none;
  }
  
  .news-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .news-card-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    margin-bottom: 10px;
    background: #EFF2F4;
    border-radius: 4px;
  }
  
  .news-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .news-card-link:hover .news-card-image img {
    transform: scale(1.05);
  }
  
  .news-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #EFF2F4;
    color: #999;
    font-size: 12px;
  }
  
  .news-type-badge {
    position: absolute;
    top: 8px;
    left: 8px;
    padding: 4px 10px;
    font-size: 10px;
    font-weight: 500;
    border-radius: 12px;
    color: #fff;
  }
  
  .type-campaign {
    background: #E57373;
  }
  
  .type-new-service {
    background: #64B5F6;
  }
  
  .type-news {
    background: #81C784;
  }
  
  .news-card-date {
    font-size: 12px;
    color: #B6BCBE;
    margin: 0 0 8px;
    font-family: 'Noto Sans JP', sans-serif;
  }
  
  .news-card-title {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.6;
    color: #000;
    margin: 0;
    font-family: 'Noto Sans JP', sans-serif;
  }
  
  .no-data {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }
  
  @media (max-width: 768px) {
    .page-title-en {
      font-size: 24px;
    }
    
    .filter-tabs {
      gap: 8px;
    }
    
    .filter-tab {
      padding: 10px 16px;
      font-size: 12px;
    }
  }
</style>
