---
import PublicLayout from '../../layouts/PublicLayout.astro';
import CtaSection from '../../components/CtaSection.astro';
import '../../styles/career.css';

const position = {
  title: 'SNSマーケティング・コンテンツプランナー(本社配属)',
  type: '正社員',
  salary: {
    main: '月給 ￥350,000 以上 + 賞与',
    notes: [
      '経験・スキルに応じて優遇',
      '業績に応じて賞与を年4回支給'
    ]
  }
};
---

<PublicLayout 
  title={`${position.title} 採用情報`}
  description={`Ledian Clinicの${position.title}の採用情報です。SNSを通じてクリニックの魅力を発信しませんか。`}
>
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="パンくずリスト">
    <div class="container">
      <ol class="breadcrumb-list">
        <li><a href="/">ホーム</a></li>
        <li><a href="/career/">採用情報</a></li>
        <li aria-current="page">{position.title}</li>
      </ol>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="career-header">
    <div class="container">
      <h1 class="career-title">{position.title} 採用情報</h1>
      <p class="career-subtitle">CAREER</p>
    </div>
  </section>

  <!-- Detail Content -->
  <section class="career-detail-section">
    <div class="container">
      <div class="career-detail-card">
        <div class="career-detail-content">
          
          <!-- 職種 -->
          <div class="career-section">
            <h3 class="career-section-title">職種</h3>
            <p class="career-section-value">SNSマーケティング・コンテンツプランナー</p>
          </div>

          <!-- 雇用形態 -->
          <div class="career-section">
            <h3 class="career-section-title">雇用形態</h3>
            <p class="career-section-value">{position.type}</p>
          </div>

          <!-- 給与 -->
          <div class="career-section">
            <h3 class="career-section-title">給与</h3>
            <p class="salary-main">{position.salary.main}</p>
            {position.salary.notes.map((note) => (
              <p class="salary-note">※ {note}</p>
            ))}
          </div>

          <!-- この仕事の魅力 -->
          <div class="career-section">
            <h3 class="career-section-title">【この仕事の魅力・アピールポイント】</h3>
            
            <div class="career-highlight">
              <h4 class="career-highlight-title">【クリエイティブ】美容×デジタルマーケティング</h4>
              <p class="career-highlight-text">Instagram、TikTok、YouTubeなど各種SNSを活用し、クリニックの魅力を発信。クリエイティブな企画力を発揮できます。</p>
            </div>

            <div class="career-highlight">
              <h4 class="career-highlight-title">【成果が見える】数字で評価される環境</h4>
              <p class="career-highlight-text">施策の効果が数字で見えるので、やりがいを感じながら仕事ができます。</p>
            </div>
          </div>

          <!-- 仕事内容 -->
          <div class="career-section">
            <h3 class="career-section-title">仕事内容</h3>
            
            <div class="career-subsection">
              <h4 class="career-subsection-title">■ 主な業務内容</h4>
              <ul class="career-list">
                <li>SNSアカウント運用（Instagram、TikTok、X、YouTubeなど）</li>
                <li>コンテンツ企画・制作</li>
                <li>インフルエンサーマーケティング</li>
                <li>広告運用（Meta広告、Google広告など）</li>
                <li>効果測定・レポーティング</li>
              </ul>
            </div>
          </div>

          <!-- 求める人材 -->
          <div class="career-section">
            <h3 class="career-section-title">求める人材</h3>
            
            <div class="career-subsection">
              <h4 class="career-subsection-title">【必須条件】</h4>
              <ul class="career-list">
                <li>SNSマーケティングの実務経験（2年以上）</li>
                <li>コンテンツ制作の経験</li>
              </ul>
            </div>

            <div class="career-subsection">
              <h4 class="career-subsection-title">【歓迎条件】</h4>
              <ul class="career-list">
                <li>美容・ヘルスケア業界での経験</li>
                <li>動画制作・編集スキル</li>
                <li>広告運用の経験</li>
              </ul>
            </div>
          </div>

          <!-- 勤務時間・曜日 -->
          <div class="career-section">
            <h3 class="career-section-title">勤務時間・曜日</h3>
            <ul class="career-list">
              <li>フレックスタイム制（コアタイム 10:00～15:00）</li>
              <li>週休2日制（土日祝）</li>
            </ul>
          </div>

          <!-- 休暇・休日 -->
          <div class="career-section">
            <h3 class="career-section-title">休暇・休日</h3>
            <ul class="career-list">
              <li>年間休日120日以上</li>
              <li>有給休暇（入社半年後より付与）</li>
              <li>年末年始休暇</li>
              <li>慶弔休暇</li>
            </ul>
          </div>

          <!-- 勤務地・アクセス -->
          <div class="career-section">
            <h3 class="career-section-title">勤務地・アクセス</h3>
            <div class="career-address">
              <p>東京都港区（本社）</p>
              <p>※リモートワーク相談可</p>
            </div>
          </div>

          <!-- 待遇・福利厚生 -->
          <div class="career-section">
            <h3 class="career-section-title">待遇・福利厚生</h3>
            <ul class="career-list">
              <li>各種社会保険完備（健康、厚生年金、雇用、労災）</li>
              <li>交通費全額支給</li>
              <li>賞与年4回（業績に応じて支給）</li>
              <li>昇給あり</li>
              <li>リモートワーク可</li>
              <li>美容施術の社員割引制度</li>
            </ul>
          </div>

          <!-- その他 -->
          <div class="career-section">
            <h3 class="career-section-title">その他</h3>
            <h4 class="career-subsection-title">【応募後の流れ】</h4>
            <ol class="career-flow">
              <li>書類選考（履歴書・職務経歴書・ポートフォリオ）</li>
              <li>面接（2～3回）</li>
              <li>内定</li>
            </ol>
          </div>

          <!-- Apply Button -->
          <div class="career-apply-section">
            <a href="/career-form/?position=SNSマーケティング・コンテンツプランナー(本社配属)" class="career-apply-btn">この求人に応募する</a>
          </div>

        </div>
      </div>
    </div>
  </section>

  <CtaSection />
</PublicLayout>

