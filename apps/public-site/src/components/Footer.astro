---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/terms', label: '利用規約' },
  { href: '/privacy-policy', label: '個人情報保護方針' },
  { href: '/legal', label: '特定商取引法に基づく表記' },
  { href: '/use-terms', label: '施設利用規約' },
  { href: '/cancel', label: 'キャンセルポリシー' },
  { href: '/contact/', label: 'お問い合わせ' },
];

const socialLinks = [
  {
    href: 'https://liff.line.me/2006759617-MvqGmVmg/landing?follow=%40182ypbnt&lp=SGYKSm&liff_id=2006759617-MvqGmVmg',
    icon: '/images/footer-line.svg',
    label: 'LINE',
  },
  {
    href: 'https://x.com/LedianClinic',
    icon: '/images/footer-x.svg',
    label: 'X',
  },
  {
    href: 'https://www.instagram.com/Ledian_clinic/',
    icon: '/images/footer-instagram.svg',
    label: 'Instagram',
  },
];
---

<footer class="footer">
  <div class="footer-inner">
    <!-- Logo -->
    <div class="footer-logo">
      <a href="#main-content" aria-label="ページトップへ戻る">
        <img src="/images/footer-logo.svg" alt="Ledian Clinic" />
      </a>
    </div>

    <div class="footer-main">
      <!-- SNS Links -->
      <ul class="footer-sns">
        {socialLinks.map((link) => (
          <li>
            <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.label}>
              <img src={link.icon} alt={link.label} />
            </a>
          </li>
        ))}
      </ul>

      <!-- Footer Links -->
      <ul class="footer-links">
        {footerLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="footer-bottom">
      <p class="footer-note">※当院は完全自費診療(保険外診療)です。</p>
      <p class="footer-copyright">©2024, Ledian Clinic</p>
    </div>
  </div>
</footer>

<style>
  /* ============================================
     Footer - 本番サイト完コピ版
     本番: bg #2D2D2D, padding 70px 0 160px
     ============================================ */
  .footer {
    background: #2D2D2D; /* 本番と同じ */
    color: #fff;
    padding: 0 20px;
  }
  
  @media (min-width: 768px) {
    .footer {
      padding: 0 86px; /* 本番と同じ */
    }
  }
  
  .footer-inner {
    max-width: 1240px;
    margin: 0 auto;
    padding: 50px 0 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .footer-inner {
      padding: 70px 0 160px; /* 本番と同じ */
    }
  }
  
  .footer-logo {
    margin-bottom: 40px;
  }
  
  .footer-logo a {
    display: inline-block;
    transition: opacity 0.3s ease;
  }
  
  .footer-logo a:hover {
    opacity: 0.7;
  }
  
  .footer-logo img {
    height: 30px; /* 本番と同じ */
    width: auto;
  }
  
  .footer-main {
    width: 100%;
    margin-bottom: 40px;
  }
  
  .footer-sns {
    display: flex;
    justify-content: center;
    gap: 16px;
    list-style: none;
    margin: 0 0 30px;
    padding: 0;
  }
  
  .footer-sns li {
    display: flex;
  }
  
  .footer-sns a {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }
  
  .footer-sns a:hover {
    opacity: 0.7;
  }
  
  .footer-sns img {
    width: 38px; /* 本番と同じ */
    height: 38px;
  }
  
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px 24px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer-links a {
    font-size: 14px;
    color: #fff;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }
  
  .footer-links a:hover {
    opacity: 0.7;
  }
  
  .footer-bottom {
    width: 100%;
    text-align: center;
  }
  
  .footer-note {
    font-size: 12px;
    color: #fff;
    margin: 0 0 10px;
  }
  
  .footer-copyright {
    font-size: 12px;
    color: #fff;
    margin: 0;
  }
  
  /* PC: 左寄せレイアウト */
  @media (min-width: 768px) {
    .footer-inner {
      align-items: flex-start;
      text-align: left;
    }
    
    .footer-main {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    .footer-sns {
      justify-content: flex-start;
      margin-bottom: 0;
    }
    
    .footer-links {
      justify-content: flex-end;
    }
    
    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }
    
    .footer-note {
      margin: 0;
    }
  }
</style>
