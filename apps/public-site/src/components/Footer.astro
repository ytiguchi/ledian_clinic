---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/terms', label: '利用規約' },
  { href: '/privacy-policy', label: '個人情報保護方針' },
  { href: '/legal', label: '特定商取引法に基づく表記' },
  { href: '/use-terms', label: '施設利用規約' },
  { href: '/cancel', label: 'キャンセルポリシー' },
  { href: '/contact/', label: 'お問い合わせ' },
];

const socialLinks = [
  {
    href: 'https://liff.line.me/2006759617-MvqGmVmg/landing?follow=%40182ypbnt&lp=SGYKSm',
    icon: '/images/icons/footer-line.svg',
    label: 'LINE',
  },
  {
    href: 'https://x.com/LedianClinic',
    icon: '/images/icons/footer-x.svg',
    label: 'X (Twitter)',
  },
  {
    href: 'https://www.instagram.com/Ledian_clinic/',
    icon: '/images/icons/footer-instagram.svg',
    label: 'Instagram',
  },
];
---

<footer class="footer" id="main-content">
  <div class="container">
    <div class="footer-content">
      <!-- Logo -->
      <div class="footer-logo">
        <a href="#main-content" aria-label="ページトップへ戻る">
          <img src="/images/footer-logo.svg" alt="Ledian Clinic" />
        </a>
      </div>

      <div class="footer-main">
        <!-- SNS Links -->
        <ul class="footer-sns">
          {socialLinks.map((link) => (
            <li>
              <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.label}>
                <img src={link.icon} alt={link.label} />
              </a>
            </li>
          ))}
        </ul>

        <!-- Footer Links -->
        <ul class="footer-links">
          {footerLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <div class="footer-bottom">
        <p class="footer-note">※当院は完全自費診療(保険外診療)です。</p>
        <p class="footer-copyright">©2024, Ledian Clinic</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #000;
    color: #fff;
    padding: 50px 0 30px;
  }
  
  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .footer-logo {
    margin-bottom: 30px;
  }
  
  .footer-logo a {
    display: inline-block;
    transition: opacity 0.3s ease;
  }
  
  .footer-logo a:hover {
    opacity: 0.7;
  }
  
  .footer-logo img {
    height: 36px;
    width: auto;
  }
  
  .footer-main {
    width: 100%;
    margin-bottom: 25px;
  }
  
  .footer-sns {
    display: flex;
    justify-content: center;
    gap: 12px;
    list-style: none;
    margin: 0 0 25px;
    padding: 0;
  }
  
  .footer-sns li {
    display: flex;
  }
  
  .footer-sns a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .footer-sns a:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
  }
  
  .footer-sns img {
    width: 18px;
    height: 18px;
  }
  
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer-links a {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: #fff;
  }
  
  .footer-bottom {
    width: 100%;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }
  
  .footer-note {
    font-size: 0.6875rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0 8px;
  }
  
  .footer-copyright {
    font-size: 0.6875rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .footer-content {
      align-items: flex-start;
      text-align: left;
    }
    
    .footer-main {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    .footer-sns {
      justify-content: flex-start;
      margin-bottom: 0;
    }
    
    .footer-links {
      justify-content: flex-end;
    }
    
    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .footer-note {
      margin: 0;
    }
  }
</style>
