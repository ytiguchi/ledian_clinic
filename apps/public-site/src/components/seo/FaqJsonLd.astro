---
import JsonLd from './JsonLd.astro';

export interface FaqItem {
  question: string;
  answer: string;
}

export interface Props {
  items: FaqItem[];
}

const { items } = Astro.props;

const faqData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

{items.length > 0 && <JsonLd data={faqData} />}

